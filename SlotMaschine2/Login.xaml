<Window x:Class="SlotMaschine2.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlotMaschine2"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <StackPanel>
        <Label Name="lblWelcome" Content="Willkommen bei der Slotmaschine 2.0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" FontWeight="ExtraBold" Margin="5"/>
        <Label Name="lblUsername" Content="Username:" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,60,0,0"/>
        <TextBox x:Name="tbUsername" Width="100"/>
        <Label Name="lblPassword" Content="Passwort:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="tbPassword" Width="100"/>
        <Button x:Name="cmdLogin" Content="Login" Click="cmdLogin_Click" Width="100" Height="20" Margin="0,30,0,0"/>
    </StackPanel>
</Window>
